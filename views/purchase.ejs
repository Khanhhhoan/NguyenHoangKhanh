<!-- add header -->
<%- include('includes/_header') %>
<!-- end header -->

<main id="main">
  <h2>Calculate Drugs to purchase</h2>
  <p>For how many days do you want to purchase drugs?</p>
  
  <!-- Form để nhập số ngày -->
  <form method="GET" action="/purchase">
    <input type="number" name="days" value="<%= days %>" min="1">
    <button type="submit">Enter</button>
  </form>

  <table id="purchase_table">	
    <thead>
      <tr>
        <th>ID</th>
        <th>Drug Name</th>
        <th>Cards to Buy</th>
        <th>Packs to Buy</th>
      </tr>
    </thead>
    <tbody>
  <% for (let i = 0; i < drugs.length; i++) { %>
    <% let pills = days * drugs[i].perDay; %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= drugs[i].name %></td>
      <td>
        <%= Math.ceil(pills / drugs[i].card) %>
        (<%= (drugs[i].pack / drugs[i].card).toFixed(2) %> card per pack)
      </td>
      <td><%= Math.ceil(pills / drugs[i].pack) %></td>
    </tr>
  <% } %>
</tbody>

  </table>
</main>

<!-- add footer -->
<%- include('includes/_footer') %>
<!-- end footer -->
